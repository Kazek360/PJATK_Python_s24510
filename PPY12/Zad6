class DaneOsobowe:
    def __init__(self):
        self.imie = None
        self.nazwisko = None

    def zapisz_dane_do_pliku(self):
        self.imie = input("Podaj imię: ")
        self.nazwisko = input("Podaj nazwisko: ")

        try:
            with open("test.txt", "w", encoding="utf-8") as file:
                file.write(f"Imię: {self.imie}\n")
                file.write(f"Nazwisko: {self.nazwisko}\n")
            print("Dane zostały zapisane do pliku test.txt.")
        except Exception as e:
            print(f"Wystąpił błąd podczas zapisu danych do pliku: {e}")

    def czytaj_dane_z_pliku(self):
        try:
            with open("test.txt", "r", encoding="utf-8") as file:
                dane = file.readlines()

            for linia in dane:
                print(linia.strip())
        except FileNotFoundError:
            print("Plik nie istnieje.")
        except Exception as e:
            print(f"Wystąpił błąd podczas odczytu danych z pliku: {e}")

if __name__ == "__main__":
    dane_osobowe = DaneOsobowe()
    dane_osobowe.zapisz_dane_do_pliku()
    print("Odczytane dane:")
    dane_osobowe.czytaj_dane_z_pliku()
